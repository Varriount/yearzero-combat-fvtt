
<div class="card-draw-form">
    <form action="/combat/draw" method="POST">
        <div class="form-group">
            <label for="qty">Draw</label>
            <input type="number" class="form-control" id="qty" name="qty" placeholder="Draw Qty">
        </div>
        <div class="form-group">
            <label for="keep">Keep</label>
            <input type="number" class="form-control" id="keep" name="keep" placeholder="Keep Qty">
        </div>
        <div class="form-group">
            <label for="keep-best">Keep Best</label> 
            <input type="radio" class="form-control" id="keep-best" name="keepState" value="best">
            <label for="keep-worst">Keep Worst</label>
            <input type="radio" class="form-control" id="keep-worst" name="keepState" value="worst">
        </div>
    </form>


